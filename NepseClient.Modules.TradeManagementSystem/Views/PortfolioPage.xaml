<UserControl x:Class="NepseClient.Modules.TradeManagementSystem.Views.PortfolioPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Symbol" Binding="{Binding Scrip}"/>
            <DataGridTextColumn Header="Balance" Binding="{Binding CurrentBalance, StringFormat=N0}" CellStyle="{StaticResource RightCellStyle}"/>
            <DataGridTextColumn Header="Previous" Binding="{Binding PreviousCloseprice, StringFormat=N0}" CellStyle="{StaticResource RightCellStyle}"/>
            <DataGridTextColumn Header="LTP" Binding="{Binding Ltp, StringFormat=N0}" CellStyle="{StaticResource RightCellStyle}"/>
            <DataGridTextColumn Header="T. Previous" Binding="{Binding ValueAsOfPreviousClosePrice, StringFormat=N0}" CellStyle="{StaticResource RightCellStyle}"/>
            <DataGridTextColumn Header="T. LTP" Binding="{Binding ValueAsOfLTP, StringFormat=N0}" CellStyle="{StaticResource RightCellStyle}"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
